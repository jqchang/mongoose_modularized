<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pokemon CRUD</title>
    <style>
      table {
        border-collapse: collapse;
      }
      td, th {
        border: 1px black solid;
      }
    </style>
  </head>
  <body>
    <h4>Pokemon List:</h4>
    <table>
      <thead>
        <th>Name</th>
        <th>Types</th>
        <th>Moves</th>
        <th>Actions</th>
      </thead>
      <tbody>
        <% for(var i = 0; i < pkmn.length; i++) {%>
        <tr>
          <td><a href='/pokemon/<%=pkmn[i]._id%>'><%= pkmn[i].name %></a></td>
          <td>
            <ul>
              <% for(var j = 0; j < pkmn[i].types.length; j++) {%>
                <li><%=pkmn[i].types[j]%></li>
              <%}%>
            </ul>
          </td>
          <td>
            <ul>
              <% for(var j = 0; j < pkmn[i].moves.length; j++) {%>
                <li><%=pkmn[i].moves[j]%></li>
              <%}%>
            </ul>
          </td>
          <td>
            <form action='/pokemon/edit/<%=pkmn[i]._id%>' method='post'>
              <input type='submit' value='Edit'></form>
            <form action='/pokemon/destroy/<%=pkmn[i]._id%>' method='post'>
              <input type='submit' value='Delete'></form>
          </td>
        <%}%>
      </tbody>
    </table>
    <a href='pokemon/new'>Add</a>
  </body>
</html>
